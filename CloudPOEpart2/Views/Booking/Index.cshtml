@model IEnumerable<CloudPOEpart2.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h1>Bookings</h1>

<form asp-action="Index" method="get" class="mb-3">
    <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by event, venue or date..." />
    <button type="submit" class="btn mt-2" style="background-color: black; color: white;">Search</button>
</form>

<div class="mt-4">
    <a class="btn" style="background-color: black; color: white;" asp-controller="Booking" asp-action="Create">Create New Booking</a>
</div>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.BookingDate.ToString("MM/dd/yyyy")</td>
                <td>
                    <a class="btn" style="background-color: black; color: white;" asp-controller="Booking" asp-action="Edit" asp-route-id="@booking.BookingID">Edit</a>
                    <a class="btn" style="background-color: black; color: white;" asp-controller="Booking" asp-action="Delete" asp-route-id="@booking.BookingID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
